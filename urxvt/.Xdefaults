URxvt.font:  xft:DejaVu Sans Mono:pixelsize=28:antialias=true:hinting=true
URxvt.boldFont:  xft:DejaVu Sans Mono:bold:pixelsize=28:antialias=true:hinting=true
URxvt.geometry: 90x65
URxvt.background: black
URxvt.foreground: white
URxvt.cursorColor: white
URxvt.cursorBlink: false
URxvt.scrollBar: false
URxvt.scrollStyle: rxvt
URxvt.scrollBar_right: false
URxvt.saveLines: 5000
URxvt.transparent: true

# For shadowing
URxvt.shading: 30

!! Pearl extensions
URxvt.perl-lib: /home/jackal/.urxvt/etx
URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select,font-size, fullscreen
URxvt.url-select.launcher:  chromium
URxvt.url-select.underline: true
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search

URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show

URxvt.url-select.launcher:  firefox
!!URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.clipboard.autocopy: true
URxvt.keysym.C-S-c:   perl:clipboard:copy
URxvt.keysym.C-S-v:   perl:clipboard:paste

URxvt.keysym.C-S-F: perl:fullscreen:switch
