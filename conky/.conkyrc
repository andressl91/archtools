background yes
use_xft yes
xftfont Sans:size=24
xftalpha 1
update_interval 1.0
total_run_times 0
own_window yes
own_window_transparent yes
own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 300 400 
maximum_width 370
draw_shades yes
draw_outline no
draw_borders no
draw_graph_borders yes
default_color white
default_shade_color black
default_outline_color white
alignment top_right
gap_x 12
gap_y 50
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale no


color1 61DAFC

TEXT
${font sans-serif:bold:size=18}${color1}SYSTEM ${color}${hr 2}
${font sans-serif:normal:size=18}$sysname $kernel $alignr $machine

${font sans-serif:bold:size=18}${color1}DISKS ${color}${hr 2}
${font sans-serif:normal:size=18}/ $alignc ${fs_used /} / ${fs_size /} $alignr ${fs_used_perc /}%
${fs_bar /}

${font sans-serif:bold:size=18}${color1}PROCESSORS ${color}${hr 2}
${font sans-serif:normal:size=18}CPU 1: ${cpu cpu1} % ${cpubar cpu1}
CPU 2: ${font sans-serif:normal:size=18}${cpu cpu2} % ${cpubar cpu2}
CPU 3: ${font sans-serif:normal:size=18}${cpu cpu3} % ${cpubar cpu3}
CPU 4: ${font sans-serif:normal:size=18}${cpu cpu4} % ${cpubar cpu4}

${font sans-serif:bold:size=18}${color1}MEMORY ${color}${hr 2}
${font sans-serif:normal:size=18}RAM  ${font sans-serif:normal:size=18}$mem / $memmax  
$memgraph

${font sans-serif:bold:size=18}${color1}TOP PROCESSES ${color}${hr 2}
${font sans-serif:normal:size=18}${top_mem name 1}${alignr}${top mem 1} %
${top_mem name 2}${alignr}${top mem 2} %
${top_mem name 3}${alignr}${top mem 3} %
${top_mem name 4}${alignr}${top mem 4} %


${font sans-serif:bold:size=18}${color1}NETWORK ${color}${hr 2}
${font sans-serif:normal:size=18}IP address: $alignr ${addr wlp2s0}
ESSID: $alignr ${wireless_essid wlp2s0}
Connection quality: $alignr ${wireless_link_qual_perc wlp2s0}%

${downspeedgraph wlp2s0 }
DLS:${downspeed wlp2s0} $alignr total: ${totaldown wlp2s0}
${upspeedgraph wlp2s0 CDC8B1 }
ULS:${upspeed wlp2s0} $alignr total: ${totalup wlp2s0}


